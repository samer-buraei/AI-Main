FROM node:24-alpine

# Set working directory
WORKDIR /app

# Install build dependencies
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies with legacy peer deps
RUN npm install --legacy-peer-deps

# Copy source code
COPY . ./

# Expose port
EXPOSE 4001

# Start application
CMD ["npm", "run", "dev"]

